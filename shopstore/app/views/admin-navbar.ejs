<script>
    // เพิ่มเหตุการณ์ "DOMContentLoaded" เพื่อรอให้หน้าเว็บโหลดเสร็จก่อน
    document.addEventListener("DOMContentLoaded", function () {
        // หาลิงค์ทั้งหมดที่มีคลาส "nav-link" ภายใน Navbar
        const navLinks = document.querySelectorAll(".nav-link");
        
        // วน loop เพื่อให้ลิงค์ทั้งหมดมีเหตุการณ์ "click"
        navLinks.forEach((link) => {
            link.addEventListener("click", function () {
                // ลบคลาส "active" ออกจากลิงค์ทั้งหมดก่อน
                navLinks.forEach((navLink) => {
                    navLink.classList.remove("active");
                });
                // เพิ่มคลาส "active" ให้กับลิงค์ที่ถูกคลิก
                link.classList.add("active");
            });
        });
    });
</script>

