    <style>
        @import url('https://fonts.googleapis.com/css2?family=Mitr&display=swap');

        body {
            font-family: 'Mitr', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .content {
            flex: 1;
        }

        footer {
            flex-shrink: 0;
        }
    </style>

</head>

<body>

    <header>
        <%- include('admin-navbar') %>
    </header>

    <div class="content">
        <div class="container mt-5">
