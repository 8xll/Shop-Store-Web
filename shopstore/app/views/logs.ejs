            <p class="fs-5 mb-0">ประวัติเข้าสู่ระบบ Admin</p>
        </div>

        <div class="container mt-5">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Time</th>
                            <!-- <th scope="col">Account Id</th> -->
                            <th scope="col">Username</th>
                            <th scope="col">Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.forEach(function(item, index) { %>
                            <tr>
                                <th scope="row">
                                    <%= item.log_admin_id %>
                                </th>
                                <td>
                                    <%= item.time %>
                                </td>
                                <!-- <td>
                                    <%= item.account_id %>
                                </td> -->
                                <td>
                                    <%= item.username %>
                                </td>
                                <td>
                                    <%= item.password %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('footer') %>

</body>

</html>